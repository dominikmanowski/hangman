{
  "name": "hangman-game",
  "version": "0.0.2",
  "description": "Hangman - a simple guessing game for one player",
  "main": "scripts.js",
  "scripts": {
    "watch:pug": "pug ./src/pug/index.pug -o ./src/ -p index.html -P -w",
    "watch:sass": "node-sass ./src/sass/main.sass ./src/style.css -w",
    "serve": "browser-sync start --server './src/' --files './src/*.css, './src/index.html -b 'chromium-browser'",
    "start": "npm-run-all --parallel serve watch:pug watch:sass",
    "build:css": "node-sass ./src/sass/main.sass ./build/style.css",
    "build:html": "pug ./src/pug/index.pug -o ./build/ -p index.html -P",
    "minify:image": "imagemin ./src/img/* --out-dir=build/img",
    "build" : "npm-run-all build:css build:html minify:image",
    "deploy": "gh-pages -d build"
  },
  "keywords": [
    "hangman"
  ],
  "author": "Dominik Manowski",
  "license": "ISC",
  "homepage": "https://dominikmanowski.github.io/hangman",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "gh-pages": "^2.0.1",
    "imagemin": "^6.0.0",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3"
  },
  "dependencies": {
    "imagemin-cli": "^3.0.0"
  }
}
